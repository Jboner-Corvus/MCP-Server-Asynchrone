{
  "name": "fastmcp-httpstream-docker-refactored",
  "version": "0.0.4",
  "description": "Refactored FastMCP Server for Docker with HTTP Streaming, Redis Task Queue and improved tooling",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "//--- DEVELOPPEMENT ---": "",
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:worker\"",
    "dev:server": "tsx watch src/server.ts",
    "dev:worker": "tsx watch src/worker.ts",
    "//--- BUILD ---": "",
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "//--- PRODUCTION ---": "",
    "start": "node dist/server.js",
    "start:worker": "node dist/worker.js",
    "//--- QUALITÃ‰ & LINTING ---": "",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check-types": "tsc --noEmit",
    "//--- TESTS ---": "",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "npm run test -- --watchAll",
    "test:coverage": "npm run test -- --coverage",
    "//--- DOCKER ---": "",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down -v",
    "docker:logs": "docker compose logs -f",
    "//--- GIT HOOKS ---": "",
    "prepare": "husky"
  },
  "keywords": [
    "fastmcp",
    "mcp",
    "http-stream",
    "streaming",
    "docker",
    "typescript",
    "node",
    "redis",
    "bullmq",
    "worker"
  ],
  "author": "Your Name/Team <your.email@example.com>",
  "license": "ISC",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "bullmq": "^5.53.0",
    "dotenv": "^16.5.0",
    "fastmcp": "3.6.2",
    "pino": "^9.7.0",
    "zod": "^3.25.28"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.0.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.3.4",
    "tsx": "^4.15.7",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^(./.*)\\.js$": "$1"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types.ts",
      "!src/server.ts",
      "!src/worker.ts",
      "!**/node_modules/**"
    ]
  }
}
